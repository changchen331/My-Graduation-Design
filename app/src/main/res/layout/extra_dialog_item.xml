<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/extra_dialog"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/extra_dialog_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:scaleType="fitStart"
            android:src="@drawable/cartoon_girl" />

        <TextView
            android:id="@+id/extra_dialog_left_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/extra_dialog_item_left"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/extra_dialog_item_text"
            android:textColor="@color/extra_dialog_item_text"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/extra_dialog_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/extra_dialog_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/extra_dialog_item_right"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/extra_dialog_item_text"
            android:textColor="@color/extra_dialog_item_text"
            android:textSize="23sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:scaleType="fitStart"
            android:src="@drawable/extra_dialog_right_icon" />
    </LinearLayout>
</LinearLayout>