<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <!-- 对话框 问题 -->
    <LinearLayout
        android:id="@+id/extra_dialog_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="start|center"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <!-- 提问者头像 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.18"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:src="@drawable/cartoon_girl" />

        <!-- 问题展示文本框 -->
        <TextView
            android:id="@+id/extra_dialog_left_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="0.64"
            android:background="@drawable/extra_dialog_item_left"
            android:gravity="start|center"
            android:padding="15dp"
            android:text="@string/extra_dialog_item_text"
            android:textColor="@color/extra_dialog_item_text"
            android:textSize="20sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.18" />
    </LinearLayout>

    <!-- 对话框 回答 -->
    <LinearLayout
        android:id="@+id/extra_dialog_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="1">

        <!-- 回答者头像 -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="0.17"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/extra_dialog_right_icon" />

        <!-- 回答展示文本框 -->
        <TextView
            android:id="@+id/extra_dialog_right_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="5dp"
            android:layout_weight="0.61"
            android:background="@drawable/extra_dialog_item_right"
            android:gravity="start|center"
            android:padding="15dp"
            android:text="@string/extra_dialog_item_text"
            android:textColor="@color/extra_dialog_item_text"
            android:textSize="20sp" />

        <!-- 回答编辑按钮 -->
        <ImageButton
            android:id="@+id/extra_dialog_right_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="-13dp"
            android:layout_weight="0.125"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:src="@drawable/extra_dialog_right_edit" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.095" />
    </LinearLayout>
</LinearLayout>