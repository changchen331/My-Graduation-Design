<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingTop="20dp"
    android:paddingEnd="16dp"
    android:paddingBottom="20dp"
    android:weightSum="1">

    <!-- 手动输入框 -->
    <EditText
        android:id="@+id/main_keyboard_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:autofillHints="NONE"
        android:background="@drawable/main_keyboard_edit"
        android:imeOptions="actionSend"
        android:importantForAccessibility="no"
        android:inputType="text"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"
        android:textColor="@color/main_keyboard_edit_text"
        android:textColorHighlight="@color/main_keyboard_edit_highlight"
        android:textCursorDrawable="@drawable/main_keyboard_edit_cursor"
        android:textIsSelectable="true"
        android:textSize="23sp"
        tools:ignore="LabelFor" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05" />

    <!-- 发送按钮 -->
    <ImageButton
        android:id="@+id/main_keyboard_send"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:importantForAccessibility="no"
        android:scaleType="fitCenter"
        android:src="@drawable/main_keyboard_send" />

</LinearLayout>
